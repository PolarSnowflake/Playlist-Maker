<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Стиль для кнопок -->
    <style name="ButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginStart">@dimen/layout_margin_start_end</item>
        <item name="android:layout_marginEnd">@dimen/layout_margin_start_end</item>
        <item name="android:layout_marginTop">@dimen/layout_margin_top</item>

        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textColor">@color/dark_gray</item>
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:paddingVertical">8dp</item>
        <item name="android:paddingHorizontal">16dp</item>
    </style>

    <style name="ButtonFontStyle">
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>

    <!-- Стиль для кнопки "Назад" для настроек -->
    <style name="ButtonStyleIconOnly">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:backgroundTint">@color/settingsBackground</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <!-- Стиль TextView для настроек -->
    <style name="SettingsTextView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/dark_gray</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:paddingVertical">@dimen/padding_vertical</item>
        <item name="android:paddingStart">@dimen/padding_start</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>

    <!-- Стиль Switch для настроек -->
    <style name="SettingsSwitch">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:paddingVertical">@dimen/padding_vertical</item>
        <item name="android:paddingStart">@dimen/padding_start</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
    </style>

    <!-- Стиль RelativeLayout для поиска -->
    <style name="SearchRelativeLayout">
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
    </style>

    <!-- Стиль EditText для поиска -->
    <style name="SearchEditText">
        <item name="android:drawablePadding">8dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingTop">8.5dp</item>
        <item name="android:paddingEnd">48dp</item>
        <item name="android:paddingBottom">8.5dp</item>
        <item name="android:singleLine">true</item>
    </style>

    <!-- Стиль HintTextView для поиска -->
    <style name="SearchHintTextView">
        <item name="android:padding">16dp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <!-- Стиль ClearButton для поиска -->
    <style name="ClearButton">
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
    </style>

    <!-- Стиль LinearLayoutHistorySearch для поиска -->
    <style name="HistorySearchLinearLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingHorizontal">12dp</item>
        <item name="android:layout_marginTop">32dp</item>
        <item name="android:orientation">vertical</item>
    </style>

    <!-- Стиль SearchHistoryHeaderTextView для поиска -->
    <style name="SearchHistoryHeaderTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">24dp</item>
        <item name="android:gravity">top|center</item>
        <item name="android:textSize">19sp</item>
    </style>

    <!-- Стиль SearchHistoryHeaderTextView для поиска -->
    <style name="RecyclerViewHistory">
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:visibility">visible</item>
    </style>

    <!-- Стиль HistoryClearButton для поиска -->
    <style name="HistoryClearButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:layout_marginBottom">24dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
    </style>

    <!-- Стиль ErrorPlaceholderLayout для поиска -->
    <style name="ErrorPlaceholderLayout">
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!-- Стиль UpdateButton для поиска -->
    <style name="UpdateButton">
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:clickable">false</item>
        <item name="android:focusable">false</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/update_button_text_size</item>
    </style>

    <!-- Кнопка "Новый плейлист"  для медиатеки-->
    <style name="CreatePlaylistButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:backgroundTint">@color/placeholderMessageColor</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:paddingStart">14dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingEnd">14dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/historySearchClearButtonTextColor</item>
        <item name="android:textSize">@dimen/media_library_text_size_16sp</item>
        <item name="cornerRadius">54dp</item>
    </style>

    <!-- Текст "Заглушка" для медиатеки-->
    <style name="PlaceholderMessageStyle">
        <item name="android:layout_width">300dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingEnd">24dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/settingsText</item>
        <item name="android:textSize">19sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Стиль TabLayout для медиатеки-->
    <style name="CustomTabLayout" parent="Widget.Design.TabLayout">
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">@color/settingsText</item>
        <item name="tabIndicatorHeight">2dp</item>
        <item name="tabIndicatorColor">@color/settingsText</item>
        <item name="tabSelectedTextColor">@color/settingsText</item>
        <item name="tabTextColor">@color/settingsText</item>
        <item name="tabBackground">@color/settingsBackground</item>
        <item name="tabTextAppearance">@style/CustomTabLayoutTextStyle</item>
    </style>
    <style name="CustomTabLayoutTextStyle">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/media_library_text_size_16sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="AddPlaylistStyleTextInputLayout" parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">54dp</item>
        <item name="endIconDrawable">@drawable/clear_button</item>
        <item name="endIconMode">clear_text</item>
        <item name="endIconTint">@color/progressbar</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/padding_vertical</item>
        <item name="boxCornerRadiusBottomStart">@dimen/padding_vertical</item>
        <item name="boxCornerRadiusTopEnd">@dimen/padding_vertical</item>
        <item name="boxCornerRadiusTopStart">@dimen/padding_vertical</item>
    </style>

    <style name="PlaylistInfoStyle">
        <item name="android:ellipsize">end</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/player_text_size</item>
        <item name="android:textColor">@color/settingsText</item>
        <item name="lineSpacing">2sp</item>
        <item name="android:textStyle">normal</item>
    </style>
</resources>