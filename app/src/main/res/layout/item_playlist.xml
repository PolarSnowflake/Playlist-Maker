<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="61dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_playlist_image"
        android:layout_width="@dimen/track_item_image_size"
        android:layout_height="@dimen/track_item_image_size"
        android:layout_gravity="center_vertical"
        android:src="@drawable/placeholder" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="8dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_playlist_name"
            android:layout_width="match_parent"
            android:layout_height="19dp"
            android:fontFamily="@font/ys_display_medium"
            android:textColor="@color/settingsText"
            android:textSize="@dimen/player_text_size_16sp"
            tools:text="Лучшие треки 2024" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="1dp">

            <TextView
                android:id="@+id/tv_quantity_of_tracks"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="0.7"
                android:ellipsize="end"
                android:fontFamily="@font/ys_display_medium"
                android:maxLines="1"
                android:textColor="@color/text_color_searh"
                android:textSize="11sp"
                tools:text="15 треков" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>