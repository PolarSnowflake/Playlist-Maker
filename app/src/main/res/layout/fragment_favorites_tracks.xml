<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/placeholder"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:visibility="gone">

        <ImageView
            android:id="@+id/placeholderImage"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="106dp"
            android:paddingBottom="20dp"
            android:src="@drawable/not_found_icon" />

        <TextView
            android:id="@+id/placeholder_message"
            style="@style/PlaceholderMessageStyle"
            android:text="@string/mediateka_is_empty"
            android:textColor="@color/settingsText" />
    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/favoritesTracksRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="13dp" />
</FrameLayout>